<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Emp" table="emp" schema="test">
        <id name="empno" column="empno"></id>
        <property name="ename" column="ename"/>
        <property name="job" column="job"/>
        <property name="salary" column="salary"/>
        <property name="bonus" column="bonus"/>
        <property name="sex" column="sex"/>
        <property name="hiredate" column="hiredate"/>
        <property name="deptno" column="deptno"/>
    </class>
</hibernate-mapping>